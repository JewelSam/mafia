#main
  .wrapper.clearfix
    / page content
    #page-content.clearfix
      / fullwidth content
      .fullwidth-content
        %h2.page-heading
          %span Вход в административную панель
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          %div
            = f.label :email
            %br/
            = f.email_field :email, :autofocus => true
          %div
            = f.label :password
            %br/
            = f.password_field :password
          %div= f.submit 'Войти'
